<resources>


    <style name="TextViewCustomFont">
        <item name="fontPath">fonts/Poppins-Bold.ttf</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>

        <!--<item name="android:textViewStyle">@style/TextViewCustomFont</item>-->

    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyCustomTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>

    </style>

    <style name="loginbutton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/x16</item>
        <item name="android:background">@drawable/red_circle</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/x25</item>
        <item name="android:layout_marginEnd">@dimen/x25</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_marginTop">@dimen/x20</item>
        <item name="android:layout_marginBottom">@dimen/x20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FilePickeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_button</item>
        <item name="colorPrimaryDark">@color/color_button</item>
        <item name="colorAccent">@color/color_button</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_button</item>
        <item name="android:textSize">@dimen/x10</item>
    </style>

    <style name="login_guestbutton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/x16</item>
        <item name="android:background">@drawable/login_guest</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/x20</item>
        <item name="android:textColor">@color/skipText_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="contactus" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/x20</item>
        <item name="android:layout_marginStart">@dimen/x20</item>
        <item name="android:layout_marginTop">@dimen/x20</item>
        <item name="android:paddingBottom">@dimen/x10</item>
        <item name="android:paddingStart">@dimen/x8</item>
        <item name="android:textSize">@dimen/s16</item>
        <item name="android:textColor">@color/skipText_color</item>

    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="DialogTimeTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

</resources>
