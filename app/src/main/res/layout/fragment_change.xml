<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ingic.mylaundry.fragments.ChangePasswordFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x80"
        android:src="@drawable/password_logo" />

    <com.ingic.mylaundry.customViews.CustomTextInputLayout
        android:id="@+id/currentPassInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x30"
        android:layout_marginStart="@dimen/x30">

        <EditText
            android:id="@+id/et_currentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x20"
            android:background="@null"
            android:digits="@string/password_space"
            android:drawableStart="@drawable/pass"
            android:drawablePadding="@dimen/x14"
            android:textAlignment="viewStart"
            android:hint="@string/enter_current_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingBottom="@dimen/x10"
            android:paddingStart="@dimen/x8"
            android:singleLine="true"
            android:textColor="@color/skipText_color"
            android:textColorHint="@color/skipText_color"
            android:textSize="@dimen/s16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_midgray" />
    </com.ingic.mylaundry.customViews.CustomTextInputLayout>

    <com.ingic.mylaundry.customViews.CustomTextInputLayout
        android:id="@+id/newPassInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x30"
        android:layout_marginStart="@dimen/x30">

        <EditText
            android:id="@+id/et_newPassword"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x20"
            android:background="@null"
            android:digits="@string/password_space"
            android:drawableStart="@drawable/pass"
            android:drawablePadding="@dimen/x14"
            android:textAlignment="viewStart"
            android:hint="@string/new_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingBottom="@dimen/x10"
            android:paddingStart="@dimen/x8"
            android:singleLine="true"
            android:textColor="@color/skipText_color"
            android:textColorHint="@color/skipText_color"
            android:textSize="@dimen/s16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_midgray" />

    </com.ingic.mylaundry.customViews.CustomTextInputLayout>

    <com.ingic.mylaundry.customViews.CustomTextInputLayout
        android:id="@+id/confirmPassInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x30"
        android:layout_marginStart="@dimen/x30">

        <EditText
            android:id="@+id/et_confirmPassword"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x20"
            android:background="@null"
            android:digits="@string/password_space"
            android:drawableStart="@drawable/pass"
            android:drawablePadding="@dimen/x14"
            android:hint="@string/confirm_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:maxLength="20"
            android:paddingBottom="@dimen/x10"
            android:paddingStart="@dimen/x8"
            android:singleLine="true"
            android:textColor="@color/skipText_color"
            android:textColorHint="@color/skipText_color"
            android:textSize="@dimen/s16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_midgray" />

    </com.ingic.mylaundry.customViews.CustomTextInputLayout>

    <Button
        android:id="@+id/btn_done"
        style="@style/loginbutton"
        android:text="@string/done" />

</LinearLayout>
