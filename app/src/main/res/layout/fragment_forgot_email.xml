<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.ingic.mylaundry.fragments.ForgotEmailFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/password_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x25"
        android:layout_marginStart="@dimen/x25"
        android:layout_marginTop="@dimen/x14"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtemailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/enter_your_email_address"
            android:textColor="@color/Text_color"
            android:textSize="@dimen/s22" />

        <TextView
            android:id="@+id/txtEmailDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:text="@string/to_rest_your_password_please_enter_the_email_address_you_provided_in_the_sign_up_process"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s12" />

        <com.ingic.mylaundry.customViews.CustomTextInputLayout
            android:id="@+id/emailInputLayout"
            android:layout_marginEnd="@dimen/x25"
            android:layout_marginStart="@dimen/x25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x20"
                android:background="@null"
                android:drawablePadding="@dimen/x14"
                android:drawableStart="@drawable/email"
                android:hint="@string/email_address"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:paddingBottom="@dimen/x10"
                android:paddingStart="@dimen/x8"
                android:singleLine="true"
                android:textColor="@color/skipText_color"
                android:textColorHint="@color/skipText_color"
                android:textSize="@dimen/s16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/color_midgray" />

        </com.ingic.mylaundry.customViews.CustomTextInputLayout>


        <Button
            android:id="@+id/btn_submit"
            style="@style/loginbutton"

            android:text="@string/submit" />

    </LinearLayout>

</LinearLayout>
