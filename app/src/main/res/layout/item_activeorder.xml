<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_mainActiveOrder"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_orderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_id"
                    android:textColor="@color/skipText_color"
                    android:textSize="@dimen/s16" />

                <TextView
                    android:id="@+id/txtOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="146"
                    android:textColor="@color/skipText_color"
                    android:textSize="@dimen/s16" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_DateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x6"
                android:text="@string/pickup_date_time"
                android:textColor="@color/color_button"
                android:textSize="@dimen/s13" />

            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s10" />

            <TextView
                android:id="@+id/tv_deliveryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:text="@string/delivery_date_time"
                android:textColor="@color/color_button"
                android:textSize="@dimen/s13" />

            <TextView
                android:id="@+id/deliveryDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_activeOrder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textSize="@dimen/s10" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AED 20.00"
                android:textColor="@color/color_button"
                android:textSize="@dimen/s14" />

            <TextView
                android:gravity="center"
                android:id="@+id/txtPickupProcess"
                android:layout_width="@dimen/x95"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/color_button"
                android:paddingBottom="@dimen/x3"
                android:paddingTop="@dimen/x3"
                android:textColor="@color/color_white"
                android:textSize="@dimen/s9" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_seprater" />

</LinearLayout>