<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/x8"
    android:paddingEnd="@dimen/x8"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/x8">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgView_item"
            android:layout_width="@dimen/x65"
            android:layout_height="@dimen/x65"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/x5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/x9"
            android:layout_marginStart="@dimen/x9"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="T.shirt"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_button"
                android:textSize="@dimen/s12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/x25"
            android:layout_weight="0.1"
            android:background="@drawable/rounded_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_subtract"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/skipText_color" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/color_lightgray" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/skipText_color" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/color_lightgray" />

            <TextView
                android:id="@+id/tv_addition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/skipText_color" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:paddingStart="@dimen/x8"
        android:paddingEnd="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_seprater" />
</LinearLayout>