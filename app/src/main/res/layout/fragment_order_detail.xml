<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fillViewport="true"
    tools:context="com.ingic.mylaundry.fragments.OrderDetailFragment">

    <LinearLayout
        android:id="@+id/layoutOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_customeDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:background="@color/color_seprater"
            android:padding="@dimen/x8"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:text="@string/customer_details"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x11"
                    android:paddingEnd="@dimen/x14"
                    android:paddingStart="@dimen/x14"
                    android:text="@string/full_name"
                    android:textColor="@color/color_button"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    android:paddingEnd="@dimen/x14"
                    android:paddingStart="@dimen/x14"
                    android:textColor="@color/skipText_color"
                    android:textSize="@dimen/s14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x11"
                    android:paddingEnd="@dimen/x12"
                    android:paddingStart="@dimen/x12"
                    android:text="@string/mobile_number"
                    android:textColor="@color/color_button"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:id="@+id/txtNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    android:paddingEnd="@dimen/x12"
                    android:paddingStart="@dimen/x12"
                    android:textColor="@color/skipText_color"
                    android:textSize="@dimen/s14" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_orderTrackingStatus"
            style="@style/loginbutton"
            android:text="@string/order_tracking_status" />

        <!--<TextView-->
        <!--android:id="@+id/txtDeliveryDateTime"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingEnd="@dimen/x12"-->
        <!--android:paddingStart="@dimen/x12"-->
        <!--android:text="@string/_08_may_2017_9_00_am_to_12_00_am"-->
        <!--android:textColor="@color/skipText_color"-->
        <!--android:textSize="@dimen/x15" />-->

        <TextView
            android:id="@+id/tv_pickupDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:background="@color/color_seprater"
            android:padding="@dimen/x8"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:text="@string/pickup_details"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s15" />

        <TextView
            android:id="@+id/tv_pickupDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x11"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:text="@string/date_time"
            android:textColor="@color/color_button"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/txtPickupDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s14" />


        <TextView
            android:id="@+id/tv_pickupAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x11"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:text="@string/Address"
            android:textColor="@color/color_button"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/txtPickupAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s14" />

        <TextView
            android:id="@+id/tv_deliveryDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:background="@color/color_seprater"
            android:padding="@dimen/x8"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:text="@string/delivery_details"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s15" />

        <TextView
            android:id="@+id/tv_deliveryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x11"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:text="@string/date_time"
            android:textColor="@color/color_button"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/txtDeliveryDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s14" />


        <TextView
            android:id="@+id/tv_deliveryAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x11"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:text="@string/Address"
            android:textColor="@color/color_button"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/txtDeliveryAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s14" />

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:background="@color/color_seprater"
            android:padding="@dimen/x8"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:text="@string/item_list"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s15" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x16"
                    android:layout_marginEnd="@dimen/x16"
                    android:layout_marginTop="@dimen/x5"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:src="@drawable/wash_fold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/dry_clean"
                            android:textColor="@color/skipText_color"
                            android:textSize="@dimen/s17" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView_cart_dryClean"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/color_seprater" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x16"
                    android:layout_marginEnd="@dimen/x16"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:src="@drawable/iron_cart" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/steam_ironing"
                            android:textColor="@color/skipText_color"
                            android:textSize="@dimen/s17" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView_cart_steamIron"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/color_seprater" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginEnd="@dimen/x5"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:src="@drawable/wash_iron" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/wash_amp_iron"
                            android:textColor="@color/skipText_color"
                            android:textSize="@dimen/s17" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView_WashIron"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/color_seprater" />

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_seprater"
            android:nestedScrollingEnabled="false"
            android:padding="@dimen/x8"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:text="@string/payment_metho"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s15" />

        <LinearLayout
            android:id="@+id/layoutPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x11"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14">

            <TextView
                android:id="@+id/txtPaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cash_on_delivery"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/txtPaymentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/skipText_color"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:background="@color/color_seprater"
            android:padding="@dimen/x8"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:text="@string/total_price"
            android:textColor="@color/skipText_color"
            android:textSize="@dimen/s15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x11"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14">

            <TextView
                android:id="@+id/tv_promoitem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:text="@string/total_items"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/txtTotItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="start"
                android:textColor="@color/color_button"
                android:textSize="@dimen/s14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x11"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14">

            <TextView
                android:id="@+id/tv_subtotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:text="@string/sub_total"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/txtSubTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="start"
                android:textColor="@color/color_button"
                android:textSize="@dimen/s14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_instanceCharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x11"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14">

            <TextView
                android:id="@+id/tv_orderInstance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:text="@string/order_instance_surcharge"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/txtinstanceSurcharge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="start"
                android:textColor="@color/color_button"
                android:textSize="@dimen/s14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_promoCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x11"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14">

            <TextView
                android:id="@+id/tv_promoCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:text="@string/promo_code"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/txtPromoCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="start"
                android:textColor="@color/color_button"
                android:textSize="@dimen/s14" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x11"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14">

            <TextView
                android:id="@+id/tvpayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:text="@string/payment_vat"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/txtPayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="start"
                android:textColor="@color/color_button"
                android:textSize="@dimen/s14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x11"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x14"
            android:paddingStart="@dimen/x14"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_GrandTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:text="@string/grand_total"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/txtGrandTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="start"
                android:textColor="@color/color_button"
                android:textSize="@dimen/s14" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
