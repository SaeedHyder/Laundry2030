<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.ingic.mylaundry.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/image"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageelogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/banner_logo"
                android:textColor="@color/color_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center"
                android:text="@string/_2030_laundry"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                android:textSize="@dimen/s22" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="@string/problem_with_laundry"
                android:textColor="@color/color_white"
                android:textSize="@dimen/s22" />

            <TextView
                android:id="@+id/txthomeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/we_can_do_it"
                android:textColor="@color/color_white"
                android:textSize="@dimen/s22"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:background="@null"
                android:drawableEnd="@drawable/right_arrow"
                android:drawablePadding="@dimen/x20"
                android:drawableStart="@drawable/services"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/x20"
                android:paddingTop="@dimen/x20"
                android:singleLine="true"
                android:text="@string/services"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginEnd="@dimen/x8"
                android:layout_marginStart="@dimen/x60"
                android:background="@color/color_midgray" />

            <TextView
                android:id="@+id/tv_myProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:background="@null"
                android:drawableEnd="@drawable/right_arrow"
                android:drawablePadding="@dimen/x20"
                android:drawableStart="@drawable/profile"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/x20"
                android:paddingTop="@dimen/x20"
                android:singleLine="true"
                android:text="@string/my_profile"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginEnd="@dimen/x8"
                android:layout_marginStart="@dimen/x60"
                android:background="@color/color_midgray" />

            <TextView
                android:id="@+id/tv_myOrders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:background="@null"
                android:drawableEnd="@drawable/right_arrow"
                android:drawablePadding="@dimen/x20"
                android:drawableStart="@drawable/my_order"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/x20"
                android:paddingTop="@dimen/x20"
                android:singleLine="true"
                android:text="@string/my_orders"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginEnd="@dimen/x8"
                android:layout_marginStart="@dimen/x60"
                android:background="@color/color_midgray" />

            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:background="@null"
                android:drawableEnd="@drawable/right_arrow"
                android:drawablePadding="@dimen/x20"
                android:drawableStart="@drawable/settings"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/x20"
                android:paddingTop="@dimen/x20"
                android:singleLine="true"
                android:text="@string/settings"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginEnd="@dimen/x8"
                android:layout_marginStart="@dimen/x60"
                android:background="@color/color_midgray" />

            <TextView

                android:id="@+id/tv_contactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:background="@null"
                android:drawableEnd="@drawable/right_arrow"
                android:drawablePadding="@dimen/x20"
                android:drawableStart="@drawable/contact_us"
                android:paddingBottom="@dimen/x20"
                android:paddingTop="@dimen/x20"
                android:singleLine="true"
                android:text="@string/contact_us"
                android:textColor="@color/skipText_color"
                android:textSize="@dimen/s18" />

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/x1"-->
            <!--android:layout_marginStart="@dimen/x65"-->
            <!--android:background="@color/color_button" />-->

        </LinearLayout>

    </LinearLayout>

</ScrollView>
